<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/onboading_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/homeimage" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_100sdp"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/seconds"
            android:visibility="gone" />

        <TextView
            android:id="@+id/onboading_heading"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_55sdp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="WelCome To Aiwa Card!"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/onboading_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="casual"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Donec sollicitudin molestie malesuada. Praesent sapien massa, convallis a pellentesque nec, egestas non nisi."
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_11sdp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>