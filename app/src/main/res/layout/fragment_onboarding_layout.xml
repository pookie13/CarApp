<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/onboading_image"
                android:layout_gravity="center"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_140sdp"
                android:src="@drawable/logo_main" />


            <ImageView
                android:padding="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_100sdp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:src="@drawable/seconds" />

            <TextView
                android:visibility="gone"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/onboading_heading"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_55sdp"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="WelCome To Aiwa Card!"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:id="@+id/onboading_description"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="casual"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="Donec sollicitudin molestie malesuada. Praesent sapien massa, convallis a pellentesque nec, egestas non nisi."
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>
</LinearLayout>